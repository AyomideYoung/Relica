<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.layout.HBox?>

<fx:root fx:id="root" xmlns:fx="http://javafx.com/fxml/1"
	type="VBox" alignment="CENTER">
	<StackPane alignment="CENTER" width="${root.width}">
		<ImageView fx:id="itemImageView" />
		<Rectangle fx:id="overlay"/>
	</StackPane>
	<Label fx:id="titleLabel" alignment="CENTER"/>
	<VBox fx:id="otherInformationContainer" />
	<HBox alignment="BOTTOM_RIGHT">
		<Label fx:id="sellerNameLabel"/>
	</HBox>
	
</fx:root>

